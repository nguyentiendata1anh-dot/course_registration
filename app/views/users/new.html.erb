<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<style>
  body { font-family: 'Segoe UI', sans-serif; background: #f5f5f5; margin: 0; padding: 20px; }
  .admin-container { max-width: 900px; margin: 0 auto; }
  .admin-header { background: #fff; padding: 25px; border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.05); margin-bottom: 30px; display: flex; justify-content: space-between; align-items: center; }
  .admin-header h1 { margin: 0; font-size: 28px; color: #0078b4; }
  .form-card { background: #fff; padding: 30px; border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.05); }
  .form-group { margin-bottom: 20px; }
  .form-group label { display: block; font-weight: 600; color: #333; margin-bottom: 8px; font-size: 14px; }
  .form-control, .form-select { width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 6px; box-sizing: border-box; font-size: 14px; font-family: inherit; }
  .form-control:focus, .form-select:focus { outline: none; border-color: #0078b4; box-shadow: 0 0 0 3px rgba(0,120,180,0.1); }
  .form-row { display: grid; grid-template-columns: 1fr 1fr; gap: 20px; }
  .form-row.full { grid-template-columns: 1fr; }
  .error-msg { background: #fff5f5; color: #c53030; padding: 15px; border-radius: 6px; margin-bottom: 20px; border-left: 4px solid #c53030; }
  .error-msg h3 { margin: 0 0 10px 0; font-size: 14px; }
  .error-msg ul { margin: 0; padding-left: 20px; }
  .btn-submit { background: #0078b4; color: white; border: none; padding: 14px 30px; cursor: pointer; font-weight: 600; border-radius: 6px; font-size: 16px; width: 100%; transition: all 0.2s ease; }
  .btn-submit:hover { background: #005a8a; box-shadow: 0 4px 12px rgba(0,120,180,0.2); }
  .back-link { text-align: center; margin-top: 20px; }
  .back-link a { color: #0078b4; text-decoration: none; font-weight: 500; }
  .back-link a:hover { text-decoration: underline; }
</style>

<div class="admin-container">
  <div class="admin-header">
    <h1>Tạo tài khoản mới</h1>
    <%= link_to "← Quay lại", admin_root_path, style: "color:#0078b4; text-decoration:none; font-weight:500;" %>
  </div>

  <div class="form-card">
    <%= form_with model: @user, url: admin_users_path, method: :post, local: true do |f| %>
      <% if @user.errors.any? %>
        <div class="error-msg">
          <h3><%= pluralize(@user.errors.count, "lỗi") %> khi tạo tài khoản:</h3>
          <ul>
            <% @user.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-row">
        <div class="form-group">
          <%= f.label :email, "Email" %>
          <%= f.email_field :email, class: "form-control", placeholder: "user@example.com", required: true %>
        </div>
        <div class="form-group">
          <%= f.label :role, "Vai trò" %>
          <%= f.select :role, [["Sinh viên", "student"], ["Quản trị viên", "admin"]], { include_blank: "Chọn vai trò..." }, class: "form-select" %>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group">
          <%= f.label :password, "Mật khẩu" %>
          <%= f.password_field :password, class: "form-control", placeholder: "Nhập mật khẩu", required: true %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation, "Xác nhận mật khẩu" %>
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Xác nhận mật khẩu", required: true %>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group">
          <%= f.label :full_name, "Họ và tên" %>
          <%= f.text_field :full_name, class: "form-control", placeholder: "Tên đầy đủ" %>
        </div>
        <div class="form-group">
          <%= f.label :student_id, "Mã sinh viên" %>
          <%= f.text_field :student_id, class: "form-control", placeholder: "Mã SV" %>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group">
          <%= f.label :major, "Ngành học" %>
          <%= f.text_field :major, class: "form-control", placeholder: "Ngành học" %>
        </div>
        <div class="form-group">
          <%= f.label :dob, "Ngày sinh" %>
          <%= f.date_field :dob, class: "form-control" %>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group">
          <%= f.label :phone, "Số điện thoại" %>
          <%= f.text_field :phone, class: "form-control", placeholder: "0123456789" %>
        </div>
        <div class="form-group">
          <%= f.label :address, "Địa chỉ" %>
          <%= f.text_field :address, class: "form-control", placeholder: "Địa chỉ" %>
        </div>
      </div>

      <%= f.submit "Tạo tài khoản", class: "btn-submit" %>
    <% end %>
  </div>

  <div class="back-link">
    <%= link_to "← Quay lại Dashboard", admin_root_path %>
  </div>
</div>